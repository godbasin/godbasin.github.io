{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "es6",
        "jsx": "preserve",
        "module": "commonjs",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "pretty": true,
        "strictNullChecks": false,
        "lib": [
            "dom",
            "es7",
            "es6"
        ],
        "paths": {
             "utils": ["utils"],
             "components": ["components"]
         }
    },
    "exclude": [
        "node_modules"
    ]
}