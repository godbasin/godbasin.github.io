<% if (site.posts.length){ %>	
	<div class="archiveslist">
		<p class="asidetitle">最近文章</p>
			<ul class="archive-list">
			<% site.posts.sort('date').reverse().each(function(item, index){ %>
				<% if (index < 10){ %>	
				<li class="archive-list-item">
					<a class="archive-list-link" href="<%- config.root %><%- item.path %>" title="<%= item.title %>"><%= item.title.substr(0,18) %><%= item.title.length > 11 ? '...' : '' %></a>
				</li>
				<% } %>
			<% }); %>
			</ul>
	</div>
<% } %>